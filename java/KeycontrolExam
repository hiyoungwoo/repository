package 반복문;
import java.util.*;
public class KeycontrolExam {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
Scanner s = new Scanner(System.in);
boolean run = true;
int speed = 0;




while(run) {
	System.out.print("1.증속, 2.감속, 3.중지");
	int input = s.nextInt();
if(input == 1) {
	speed++;
	System.out.print("현재속도는 "+ speed);

    }
else if (input == 2) {
	speed--;
	System.out.print("현재속도는 "+ speed);
		
	}
else if (input == 3) {
	   break;
             }
       }
System.out.print("프로그램 종료");
  }
}
