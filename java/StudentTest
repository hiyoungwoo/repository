		Student st[] = new Student [num];
		
		
		
		for(int i= 0; i < st.length; i++) {
		System.out.println("이름, 국어, 영어, 수학 성적을 입력하시오.");
	    String name = s.next();
	    int korean = s.nextInt();
	    int english = s.nextInt();
		int math = s.nextInt();
		
		st[i] = new Student(name,korean,english,math);
		st[i].studentavg();
		
	    
		
		
		
		
		
		}
		
		
		
		
		
	}

